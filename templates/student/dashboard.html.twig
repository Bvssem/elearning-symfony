{% extends 'base.html.twig' %}

{% block title %}My Learning Dashboard{% endblock %}

{% block content %}
<div class="page-wrapper">
    <div class="container-xl">
        <div class="page-header d-print-none">
            <h2 class="page-title">My Enrolled Courses</h2>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            {# Check if the student has enrollments #}
            {% if enrollmentData is empty %}
                <div class="empty">
                    <p class="empty-title">You haven't enrolled in any courses yet.</p>
                    <div class="empty-action">
                        <a href="{{ path('app_course_index') }}" class="btn btn-primary">Browse Courses</a>
                    </div>
                </div>
            {% else %}
                <div class="row row-cards">
                    {% for item in enrollmentData %}
                        {% set enrollment = item.enrollment %}
                        {% set progress = item.progress %}
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card">
                                <div class="card-body">
                                    <h3 class="card-title mb-1">{{ enrollment.course.title }}</h3>
                                    <div class="text-muted mb-3">
                                        Enrolled: {{ enrollment.enrolledAt|date('M d, Y') }}
                                    </div>

                                    {# Progress Bar #}
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="text-muted">Progress</span>
                                            <span class="text-muted">{{ progress }}%</span>
                                        </div>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-primary" style="width: {{ progress }}%" role="progressbar"></div>
                                        </div>
                                    </div>

                                    {# Buttons #}
                                    {% set firstLesson = enrollment.course.lessons|first %}
                                    
                                    {% if firstLesson %}
                                        <a href="{{ path('app_lesson_show', {id: firstLesson.id}) }}" class="btn btn-success w-100">
                                            {% if progress > 0 %}
                                                Continue Learning
                                            {% else %}
                                                Start Lesson 1
                                            {% endif %}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_course_show', {id: enrollment.course.id}) }}" class="btn btn-outline-primary w-100">
                                            View Details
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}