{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.title, 'Course Title', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'e.g., Master Symfony 6'}}) }}
        {{ form_errors(form.title) }}
    </div>

    {# REMOVED SLUG FIELD HERE #}

    <div class="mb-3">
        {{ form_label(form.category, 'Category', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.shortDescription, 'Short Summary', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
        {{ form_errors(form.shortDescription) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.fullDescription, 'Full Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.fullDescription, {'attr': {'class': 'form-control', 'rows': '6'}}) }}
        {{ form_errors(form.fullDescription) }}
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.price, 'Price (TND)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.price) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.imageFilename, 'Image URL', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.imageFilename, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.imageFilename) }}
        </div>
    </div>

    <div class="mb-3">
        <label class="form-check form-switch">
            {{ form_widget(form.isPublished, {'attr': {'class': 'form-check-input'}}) }}
            <span class="form-check-label">Publish immediately?</span>
        </label>
        {{ form_errors(form.isPublished) }}
    </div>

    <div class="mt-4">
        <button class="btn btn-primary w-100">{{ button_label|default('Save Course') }}</button>
    </div>
{{ form_end(form) }}