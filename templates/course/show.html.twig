{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block content %}
    <div class="page-wrapper">
        <div class="container-xl">
            <div class="page-header d-print-none">
                <div class="row align-items-center">
                    <div class="col">
                        <h2 class="page-title">{{ course.title }}</h2>
                    </div>
                    <div class="col-auto">
                        <a href="{{ path('app_course_index') }}" class="btn btn-secondary">
                            Back to Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-body">
            <div class="container-xl">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card mb-3">
                            {% if course.imageFilename %}
                                <img src="{{ asset('images/courses/' ~ course.imageFilename) }}" alt="{{ course.title }}" class="card-img-top" style="height: 400px; object-fit: cover;">
                            {% else %}
                                <div style="height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 18px;">
                                    No image available
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <h3>Description</h3>
                                <p>{{ course.fullDescription }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h4>Course Details</h4>
                                                                <dl class="row">
                                    <dt class="col-sm-6">Price:</dt>
                                    <dd class="col-sm-6">
                                        {% if course.price > 0 %}
                                            <strong>${{ course.price }}</strong>
                                        {% else %}
                                            <strong class="text-success">Free</strong>
                                        {% endif %}
                                    </dd>
                                    <dt class="col-sm-6">Status:</dt>
                                    <dd class="col-sm-6">
                                        {% if course.isPublished %}
                                            <span class="badge bg-success">Published</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Draft</span>
                                        {% endif %}
                                    </dd>
                                    <dt class="col-sm-6">Created:</dt>
                                    <dd class="col-sm-6">{{ course.createdAt|date('M d, Y') }}</dd>
                                </dl>
                                {% if app.user %}
                                    {% if is_enrolled %}
                                        <form method="post" action="{{ path('app_enrollment_unenroll', {'id': course.id}) }}" style="display:inline-block; width: 100%;">
                                            <button type="submit" class="btn btn-warning w-100 mb-2" onclick="return confirm('Unenroll from this course?')">Unenroll</button>
                                        </form>
                                    {% else %}
                                        <form method="post" action="{{ path('app_enrollment_enroll', {'id': course.id}) }}" style="display:inline-block; width: 100%;">
                                            <button type="submit" class="btn btn-primary w-100 mb-2">Enroll Now</button>
                                        </form>
                                    {% endif %}
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="btn btn-primary w-100 mb-2">Login to Enroll</a>
                                {% endif %}
                                <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-secondary w-100">Edit</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
