{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }} - {{ course.title }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-xl">
        <div class="row">
            {# --- LEFT: Video & Content --- #}
            <div class="col-lg-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h2 m-0">{{ lesson.title }}</h2>
                            <span class="badge bg-blue-lt">Lesson {{ lesson.number }}</span>
                        </div>

                        {# Video Embed (Placeholder Logic) #}
                        {% if lesson.videoUrl %}
                            <div class="ratio ratio-16x9 mb-3">
                                <iframe src="{{ lesson.videoUrl }}" allowfullscreen></iframe>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                No video available for this lesson. Read the content below.
                            </div>
                        {% endif %}

                        <div class="markdown text-muted">
                            {{ lesson.content|nl2br }}
                        </div>
                    </div>
                    
                    {# --- MARK AS COMPLETE BUTTON --- #}
                    <div class="card-footer">
                        <form action="{{ path('app_lesson_complete', {id: lesson.id}) }}" method="post">
                            {% if app.user.completedLessons.contains(lesson) %}
                                <button type="submit" class="btn btn-success w-100">
                                    ✅ Completed (Click to Undo)
                                </button>
                            {% else %}
                                <button type="submit" class="btn btn-outline-success w-100">
                                    Circle (empty) Mark as Complete
                                </button>
                            {% endif %}
                        </form>
                    </div>
                </div>
            </div>

            {# --- RIGHT: Course Navigation --- #}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Course Content</h3>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for l in course.lessons %}
                            {% set isActive = (l.id == lesson.id) %}
                            {% set isCompleted = app.user.completedLessons.contains(l) %}
                            
                            <a href="{{ path('app_lesson_show', {id: l.id}) }}" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{ isActive ? 'active' : '' }}">
                                
                                <div>
                                    <span class="badge {{ isActive ? 'bg-white text-primary' : 'bg-secondary' }} me-2">
                                        {{ l.number }}
                                    </span>
                                    {{ l.title }}
                                </div>

                                {% if isCompleted %}
                                    <span class="text-success">✔</span>
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_student_dashboard') }}" class="btn btn-link w-100">
                            &larr; Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}