{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }} - {{ course.title }}{% endblock %}

{% block content %}
<div class="page-wrapper">
    <div class="container-xl my-4">
        <div class="row">
            
            {# LEFT SIDE: Video Player #}
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="ratio ratio-16x9">
                            <iframe src="{{ lesson.videoUrl }}" title="YouTube video" allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">{{ lesson.title }}</h2>
                        <p>{{ lesson.content }}</p>
                    </div>
                </div>
                
                {# NEW: Mark Complete Button Area #}
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_course_show', {id: course.id}) }}" class="btn btn-outline-secondary">
                        &larr; Back to Course
                    </a>

                    <form action="{{ path('app_lesson_complete', {id: lesson.id}) }}" method="post">
                        {% if app.user and lesson in app.user.completedLessons %}
                            <button type="submit" class="btn btn-success">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-check" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l5 5l10 -10" /></svg>
                                Completed
                            </button>
                        {% else %}
                            <button type="submit" class="btn btn-outline-success">
                                Mark as Complete
                            </button>
                        {% endif %}
                    </form>
                </div>
            </div>

            {# RIGHT SIDE: Lesson List #}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Course Content</h3>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for item in course.lessons %}
                            <a href="{{ path('app_lesson_show', {id: item.id}) }}" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{ item.id == lesson.id ? 'active' : '' }}">
                                <span>
                                    <span class="badge bg-secondary ms-1 me-2">{{ item.number }}</span>
                                    {{ item.title }}
                                </span>
                                
                                {# Show a checkmark if this item is completed #}
                                {% if app.user and item in app.user.completedLessons %}
                                    <span class="text-success">âœ”</span>
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}