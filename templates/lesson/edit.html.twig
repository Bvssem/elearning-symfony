{% extends 'base.html.twig' %}

{% block title %}Edit Lesson{% endblock %}

{% block content %}
<div class="page-wrapper">
    <div class="container-xl my-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Lesson</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.title) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.number) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.videoUrl) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.content) }}
                            </div>
                            <button class="btn btn-primary w-100">Update Lesson</button>
                        {{ form_end(form) }}
                    </div>
                </div>
                
                <div class="mt-3">
                     <form method="post" action="{{ path('app_lesson_delete', {'id': lesson.id}) }}" onsubmit="return confirm('Are you sure you want to delete this lesson?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
                        <button class="btn btn-danger w-100">Delete Lesson</button>
                    </form>
                </div>

                <div class="mt-3 text-center">
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}